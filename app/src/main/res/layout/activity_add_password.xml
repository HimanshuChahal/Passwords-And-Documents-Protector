<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:onClick="outsideClick"
    tools:context=".AddPasswordActivity">

            <EditText
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="35dp"
                android:hint="Which Password?"
                android:singleLine="true"
                android:id="@+id/titleEditText"
                android:onClick="titleOnClick"/>

            <ListView
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:id="@+id/suggestionsListView"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:gravity="top"
                android:textSize="30dp"
                android:hint="Your Password Here"
                android:visibility="invisible"
                android:id="@+id/passwordEditText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:text="Enter the App password"
                android:textSize="25dp"
                app:fontFamily="@font/font2"
                android:visibility="invisible"
                android:id="@+id/txt"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:textSize="25dp"
                android:textColor="@android:color/black"
                android:visibility="invisible"
                android:inputType="textPassword"
                android:id="@+id/requestPassEditText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginRight="60dp"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:text="Forgot Password"
                android:textColor="@android:color/holo_blue_dark"
                android:visibility="invisible"
                android:id="@+id/forgotPassTextView"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="380dp"
                android:textSize="40dp"
                android:text="DONE"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_dark"
                android:id="@+id/doneButton"
                app:fontFamily="@font/font2"
                android:onClick="savePassword"/>

</RelativeLayout>