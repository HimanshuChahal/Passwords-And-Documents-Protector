<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcpasswordprotector">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddDocumentActivity"></activity>
        <activity android:name=".PDFDocumentsList" />
        <activity android:name=".ForgotPassActivity" />
        <activity android:name=".UserDetailsActivity" />
        <activity
            android:name=".AddPasswordActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".PasswordListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>